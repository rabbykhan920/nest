  <!-- Owl Carousel Script -->
  <script>
    $(document).ready(function(){
      var owl = $(".owl-carousel");
      owl.owlCarousel({
        loop:true,
        margin:20,
        nav:false,
        dots: false,
        responsive:{
          0:{ items:1 },
          768:{ items:2 },
          1280:{ items:4 }
        }
      });

      $(".custom-next").click(function(){ owl.trigger("next.owl.carousel"); });
      $(".custom-prev").click(function(){ owl.trigger("prev.owl.carousel"); });
    });
  </script>
